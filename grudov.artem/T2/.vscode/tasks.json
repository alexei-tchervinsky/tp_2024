{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 сборка активного файла",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",

                "${workspaceFolder}/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}
